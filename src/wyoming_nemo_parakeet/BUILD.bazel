load("@pypi//:requirements.bzl", "requirement")
load("@rules_python//python:defs.bzl", "py_binary", "py_library")
load("@rules_python//python:pip.bzl", "compile_pip_requirements")
load("@xpu//:requirements.bzl", xpu_requirement = "requirement")

compile_pip_requirements(
    name = "requirements",
    src = "requirements.in",
    requirements_txt = "requirements_lock.txt",
)

compile_pip_requirements(
    name = "requirements_xpu",
    src = "requirements_xpu.in",
    extra_args = [
        "--index-url",
        "https://download.pytorch.org/whl/xpu",
        "--extra-index-url",
        "https://pypi.org/simple",
    ],
    requirements_txt = "requirements_xpu_lock.txt",
)

py_library(
    name = "handler",
    srcs = ["handler.py"],
    deps = [
        xpu_requirement("wyoming"),
    ],
)

py_binary(
    name = "main",
    srcs = ["main.py"],
    deps = [
        ":handler",
        xpu_requirement("nemo-toolkit"),
        xpu_requirement("torch"),
        xpu_requirement("torchaudio"),
        xpu_requirement("wyoming"),
    ],
)

py_binary(
    name = "xpu_available",
    srcs = ["xpu_available.py"],
    data = [
        "@@rules_python++pip+xpu_313_intel_sycl_rt//:data",
        "@@rules_python++pip+xpu_313_intel_pti//:data",
        "@@rules_python++pip+xpu_313_oneccl//:data",
        "@@rules_python++pip+xpu_313_onemkl_sycl_blas//:data",
        "@@rules_python++pip+xpu_313_onemkl_sycl_dft//:data",
        "@@rules_python++pip+xpu_313_onemkl_sycl_lapack//:data",
        "@@rules_python++pip+xpu_313_mkl//:data",
        "@@rules_python++pip+xpu_313_intel_cmplr_lib_ur//:data",
        "@@rules_python++pip+xpu_313_intel_cmplr_lib_rt//:data",
    ],
    deps = [
        xpu_requirement("torch"),
    ],
    env = {
       "LD_LIBRARY_PATH": 
           "../rules_python++pip+xpu_313_intel_sycl_rt/data/lib" +
           ":../rules_python++pip+xpu_313_intel_pti/data/lib" +
           ":../rules_python++pip+xpu_313_oneccl/data/lib" +
           ":../rules_python++pip+xpu_313_onemkl_sycl_blas/data/lib" +
           ":../rules_python++pip+xpu_313_onemkl_sycl_dft/data/lib" +
           ":../rules_python++pip+xpu_313_onemkl_sycl_lapack/data/lib" +
           ":../rules_python++pip+xpu_313_mkl/data/lib" +
           ":../rules_python++pip+xpu_313_intel_cmplr_lib_ur/data/lib" +
           ":../rules_python++pip+xpu_313_intel_cmplr_lib_rt/data/lib"
    },
)
